<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Project.Views.Templates">
        <DataTemplate x:Key="roomTemplate">
            <Grid  Background="White" Height="25" Width="341" >
                <TextBlock FontSize="14" Text="{Binding Id}" VerticalAlignment="Center" Margin="30,0,0,0"/>
                <TextBlock FontSize="14" Text="{Binding Ward}" VerticalAlignment="Center" Margin="80,0,0,0"/>
            </Grid>
        </DataTemplate>
    
</ResourceDictionary>