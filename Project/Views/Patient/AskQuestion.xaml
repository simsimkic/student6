<Window x:Class="Project.Views.Patient.AskQuestion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project.Views.Patient"
        mc:Ignorable="d"
        Title="AskQuestion" Height="360.381" Width="434.852">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="158*"/>
            <ColumnDefinition Width="269*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="245*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label Content="Question:" Margin="5"/>
        </StackPanel>
        <TextBox x:Name="Question" TextWrapping="Wrap" Grid.Row="1" Grid.ColumnSpan="2" Margin="10"/>
        <Button IsDefault="True" Content="Submit" Grid.Row="2" Margin="5,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="77" Click="Submit_Click"/>
        <Button IsCancel="True" Content="Cancel" Grid.Row="2" Grid.Column="1" Margin="5,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="77" Click="Cancel_Click"/>
    </Grid>
</Window>
