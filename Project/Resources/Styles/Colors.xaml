<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Project">
    <Color x:Key="Dark">#1c1c1c</Color>
    <SolidColorBrush x:Key="DarkBrush" Color="{StaticResource Dark}"/>

    <Color x:Key="DarkBlue">#00a8f3</Color>
    <SolidColorBrush x:Key="DarkBlueBrush" Color="{StaticResource DarkBlue}"/>

    <Color x:Key="DarkGreen">#00ef3f</Color>
    <SolidColorBrush x:Key="DarkGreenBrush" Color="{StaticResource DarkGreen}"/>



    <LinearGradientBrush x:Key="HeroBackground" EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
            <GradientStop Color="#FF45B3DC" Offset="0.303"/>
            <GradientStop Color="#FFAEEBE4" Offset="0.893"/>
            <GradientStop Color="#FFBCF0F0" Offset="0.05"/>
            <GradientStop Color="#FF45B6D7" Offset="0.523"/>
           <GradientStop Color="#FF45BCD7" Offset="0.423"/>
    </LinearGradientBrush>

</ResourceDictionary>